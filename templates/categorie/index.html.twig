{% extends 'base.html.twig' %}

{% block title %}Categorie index{% endblock %}

{% block body %}
    <h1>Categories</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Idcategorie</th>
                <th>Nomcategorie</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for categorie in categories %}
                <tr>
                    <td>{{ categorie.idcategorie }}</td>
                    <td>{{ categorie.nomcategorie }}</td>
                    <td>
                        <a href="{{ path('app_categorie_show', {'idcategorie': categorie.idcategorie}) }}">Détail</a>
                        <a href="{{ path('app_produit_new', {'idcategorie': categorie.idcategorie}) }}">Ajouter un produit</a>
                        <a href="{{ path('app_categorie_edit', {'idcategorie': categorie.idcategorie}) }}">Modifier</a>
                        <a href="{{ path('app_categorie_produits', {'idcategorie': categorie.idcategorie}) }}">Afficher produits</a>
                    

                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">Aucun enregistrement trouvé</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <p><a href="{{ path('app_categorie_new') }}">Ajouter une nouvelle catégorie</a></P>
    <p><a href="{{ path('app_categorie_download_pdf') }}">Télécharger en PDF</a></P>
    <P><a href="{{ path('app_categorie_download_excel') }}">Télécharger la liste des catégories en Excel</a></p>
    <div class="float-right mb-3">
    <a href="{{ path('app_trier_par_nom') }}" class="btn btn-sm height-auto px-4 py-3 btn-primary mr-2">Trier par Nom</a>
    
  </div>

    


{% endblock %}
