{% extends 'base.html.twig' %}

{% block title %}Produit {% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col text-center">
                <h1 class="blue">Liste des Produits</h1>
            </div>
        </div>
    
    </div>


    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Description</th>
                <th>Prix</th>
                <th>Quantiteenstock</th>
                <th colspan="3">Image</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
      {% for produit in produits %}
    <tr>
        <td>{{ produit.id }}</td>
        <td>{{ produit.nom }}</td>
        <td>{{ produit.description }}</td>
        <td>{{ produit.prix }}</td>
        <td>{{ produit.quantiteenstock }}</td>
        <td colspan="3"><img src="{{ asset('images/' ~ produit.image) }}" alt="Image" style="max-width: 200px;"></td>

        <td>
            <a href="{{ path('app_produit_show', {'id': produit.id}) }}">Detail</a>
            <a href="{{ path('app_produit_edit', {'id': produit.id}) }}">Modifier</a>
        </td>
    </tr>
{% else %}
    <tr>
        <td colspan="6">no records found</td>
    </tr>
{% endfor %}

        </tbody>
    </table>
<p><a href="{{ path('app_produit_new') }}">Ajouter un nouveau produit</a></p>
    
    <p><a href="{{ path('app_categorie_index') }}">Retourner a la liste des categories</a></p>
        <p><a href="{{ path('app_produit_download_pdf') }}">Télécharger en PDF</a></P>

         <div class="float-right mb-3">
    <a href="{{ path('app_trier_par_prix') }}" class="btn btn-sm height-auto px-4 py-3 btn-primary mr-2">Trier par Prix</a>
    
  </div>
{% endblock %}
